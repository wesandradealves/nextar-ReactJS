    "opacity": {
      "value": 0.7
    },
    "shape": {
      "type": "circle"
    },
    "size": {
      "value": { "min": 1, "max": 4 }
    }
  },
  "detectRetina": true,
  "fullScreen": {
    "enable": false,
    "zIndex": 0
  },
  "responsive": [
    {
      "maxWidth": 768,
      "options": {
        "particles": {
          "number": {
            "value": 40,
            "limit": 60
          },
          "move": {
            "speed": 0.6
          }
        }
      }
    }
  ]
}
